<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
    <PreferenceCategory
        android:title="@string/pref_general_category">
            
        <ListPreference
            android:key="pref_default_instrument"
            android:title="@string/pref_default_instrument"
            android:entries="@array/instrument_labels_array"
            android:entryValues="@array/instrument_values_array" />
            
        <ListPreference
            android:key="pref_default_playback_speed"
            android:title="@string/pref_default_playback_speed"
            android:entries="@array/playback_speed_values_array"
            android:entryValues="@array/playback_speed_values_array" />

        <PreferenceScreen
            android:key="pref_screen_alarm"
            android:title="@string/pref_screen_alarm"
            android:persistent="false">
            
            <CheckBoxPreference
                android:key="pref_alarm_enabled"
                android:title="@string/pref_alarm_enabled"
                android:defaultValue="false" />
                
            <Preference 
                android:key="button"
                android:title="@string/pref_alarm_time_picker" />

        </PreferenceScreen>
        
        <EditTextPreference
            android:key="pref_import_database_location"
            android:title="@string/pref_import_database_location"
            android:defaultValue="" />
            
        <CheckBoxPreference
            android:key="pref_apprentice_auto_add_noteset"
            android:title="@string/pref_apprentice_auto_add_noteset"
            android:defaultValue="false" />

        <EditTextPreference
            android:key="pref_emotion_graph_for_apprentice"
            android:title="@string/pref_emotion_graph_for_apprentice"
            android:defaultValue="1" />
            
        <EditTextPreference
            android:key="pref_transition_graph_for_apprentice"
            android:title="@string/pref_transition_graph_for_apprentice"
            android:defaultValue="2" />
            
        <EditTextPreference
            android:key="pref_scale_graph_for_apprentice"
            android:title="@string/pref_scale_graph_for_apprentice"
            android:defaultValue="3" />

    </PreferenceCategory>

</PreferenceScreen>
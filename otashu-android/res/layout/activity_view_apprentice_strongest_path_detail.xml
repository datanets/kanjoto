<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp" >
    
    <TextView
        android:id="@+id/view_strongest_path_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_strongest_path_detail_title"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />
        
    <TextView
        android:id="@+id/strongest_path_detail_emotion_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strongest_path_detail_emotion_label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />
        
    <TextView
        android:id="@+id/strongest_path_detail_emotion_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="15dp" />
    
    <TextView
        android:id="@+id/strongest_path_detail_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strongest_path_detail_notes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />
        
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="40dp" >
        
        <TextView
            android:id="@+id/path_detail_vertex1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center_horizontal" />
        
        <TextView
            android:id="@+id/path_detail_vertex2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center_horizontal" />
        
        <TextView
            android:id="@+id/path_detail_vertex3"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/path_detail_vertex4"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="15dp"
            android:gravity="center_horizontal"/>
              
    </LinearLayout>
            
    <Button
        android:id="@+id/button_play_strongest_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_play_strongest_path"
        android:padding="20dp"
        android:background="@drawable/button_play_selector" />
        
</LinearLayout>
